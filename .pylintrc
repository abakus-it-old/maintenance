[Master]
init-hook='sys.path = list(); sys.path.append("C:\\Program Files (x86)\\Odoo 10.0\\server")'

# accept the following non coventional name
good-names=_logger

# skip mandatory docstring for short function
docstring-min-length=10

# accepts line length matching pycharm default
max-line-length=120

[MESSAGES CONTROL]
# disabled messages
# C0103 Invalid class attribute name
# C8101 Missing author required "%s" in manifest file
# C8106	Wrong Version Format "%s" in manifest file. Regex to match: "%s"
# C8202 UTF-8 coding is not necessary
# R0903 Too few public methods
# W0611 Unused import
# W8104	api.one deprecated
# E0401 Unable to import 'some_module'
disable=C0103, C8202, R0903, W0611, W8104, E0401,rst-syntax-error,attribute-defined-outside-init,missing-docstring

[REPORTS]

reports = yes
